<% layout('layouts/boilerplate')-%>

<div class="container form d-flex align-items-center">
  	<div class="card bg-light form-card reset p-5 my-5">
  		<% include ../partials/flash-messages %>
		<h1>Forgot Password</h1>

		<form action="/reset/<%= token %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="password">New Password</label>
				<input 
					type="password" 
					name="password" 
					id="password"
					class="form-control"  
					placeholder="new password" 
					autofocus
				>
			</div>
			<div class="form-group">
				<label for="confirm">Confirm Password</label>
				<input 
					type="password" 
					name="confirm" 
					id="confirm"
					class="form-control" 
					placeholder="confirm password"
				>
			</div>
			<div>
				<input 
					type="submit" 
					value="Update Password"
					class="btn btn-success waves-effect waves-light my-3" 
					>
			</div>
		</form>
	</div>
</div>