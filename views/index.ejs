<% layout('layouts/landing')-%>

<div class="blog-home2 spacer">
  <div class="my-5 text-center">
    <h2 class="title">SurfBoard Stores</h2>
    <h6 class="subtitle">Get to the nearest store to you</h6>
    <div id="map" class="my-5"></div> 
  </div>
</div>


<div class="blog-home2 spacer">
  <div class="container">
    <!-- Row  -->
    <div class="row justify-content-center">
      <!-- Column -->
       <div class="col-md-8 text-center">
        <h2 class="title">Recent Posts</h2>
        <h6 class="subtitle">Check out our latest listings</h6>
       </div>
      <!-- Column -->
    </div>
    <div class="row m-t-40">
      <% recentPosts.forEach(post => { %>
      <!-- Column -->
      <div class="col-md-4">
        <div class="card" data-aos="flip-left" data-aos-duration="1200">
          <a href="/posts/<%= post.id %>">
            <img class="card-img-top" src="<%= post.images[0].url %>" alt="wrappixel kit">
          </a>
          <div class="date-pos bg-success-gradiant"><%= moment(post.date).format('MMM') %>
            <span><%= moment(post.date).format('D') %></span>
          </div>
          <h5 class="font-medium my-3">
            <a href="/posts/<%= post.id %>" class="link">
              <%= post.title %>
            </a>
          </h5>
          <p class="my-1">
            <%= post.location %>    
          </p>    
          <a href="/posts/<%= post.id %>" class="linking text-themecolor my-1">
            Learn More <i class="ti-arrow-right"></i>
          </a>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>
<script>
 mapboxgl.accessToken = "<%= mapBoxToken %>";
 var posts = {features: <%- JSON.stringify(posts) %>};
</script>
<script type="text/javascript" src="/scripts/allPostsClusterMap.js"></script>

